{
  "appId": "com.aichat.frontend",
  "productName": "AI Chat",
  "artifactName": "${productName}-${version}-${arch}.${ext}",
  "copyright": "Copyright Â© 2025 AI Chat",
  "directories": {
    "output": "release"
  },
  "files": [
    "main.js",
    "preload.js",
    "renderer.js",
    "index.html",
    "styles.css",
    "websocket-server-example.js",
    "dist/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "publisherName": "AI Chat",
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "AI Chat",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "portable": {
    "artifactName": "${productName}-Portable-${version}.${ext}"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.icns",
    "category": "public.app-category.productivity"
  },
  "dmg": {
    "title": "${productName} ${version}",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Office",
    "synopsis": "AI Chat Application",
    "description": "A modern AI chat application built with Electron"
  },
  "appImage": {
    "artifactName": "${productName}-${version}.${ext}"
  },
  "deb": {
    "priority": "optional",
    "depends": []
  },
  "rpm": {
    "depends": []
  },
  "publish": null
}
